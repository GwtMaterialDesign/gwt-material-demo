<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" 
       xmlns:g="urn:import:com.google.gwt.user.client.ui"
       xmlns:m="urn:import:gwt.material.design.client.ui"
       xmlns:m.html="urn:import:gwt.material.design.client.ui.html">

  <ui:with field="tokens" type="gwt.material.design.demo.client.place.NameTokens"/>
  <ui:with field="res" type="gwt.material.design.demo.client.resources.MaterialResources"/>

  <ui:style>
      .panel {
          padding-left: 5%;
          width: 100%;
          padding: 10px 50px 150px 50px;
          background: #FFF;
          box-sizing: border-box;
          -webkit-box-sizing: border-box;
          -moz-box-sizing: border-box;
      }
      .footer {
          margin-top: -50px !important;
      }
      .gplus{
        display: block;
        margin-top: 20px;
      }
  </ui:style>

  <g:HTMLPanel>

    <g:HTMLPanel ui:field="menu" />

    <m:MaterialContainer>
        <m:MaterialPanel ui:field="titlePanel" backgroundColor="BLUE" textColor="WHITE"  marginTop="56" padding="56" shadow="1">
            <m:MaterialPanel ui:field="panel">
                <m:MaterialLabel ui:field="title" text="GWT-Material" fontSize="2.3em"/>
                <m:MaterialLabel ui:field="description" text="A Material Design look and feel for GWT Apps plus Phonegap." fontSize="1.1em"/>
                <m:MaterialPanel marginTop="20">
                    <m:MaterialChip ui:field="chipXml" letter="X" textColor="WHITE" margin="6" text="XML" />
                    <m:MaterialChip ui:field="chipJava" letter="J" textColor="WHITE" text="JAVA" margin="6" />
                    <m:MaterialChip ui:field="chipSpecification" letter="S" textColor="WHITE" text="SPECIFICATION" margin="6" />
                </m:MaterialPanel>
            </m:MaterialPanel>
        </m:MaterialPanel>
      <g:HTMLPanel ui:field="main" addStyleNames="{style.panel} panel" />

      <m:MaterialPanel>
        <g:HTMLPanel>
          <input type="hidden" name="IL_IN_TAG" value="1"/>
        </g:HTMLPanel>
      </m:MaterialPanel>
    </m:MaterialContainer>

    <m:MaterialFooter ui:field="footer" addStyleNames="{style.footer}">
      <m:MaterialRow>
        <m:MaterialColumn grid="s12 m4 m4">
          <g:HTMLPanel>
            <m:MaterialTitle textColor="WHITE" title="Support Us" description="Any amount would help support and continue development on this project and is greatly appreciated."/>
            <form action="https://www.paypal.com/cgi-bin/webscr" method="post" target="_top">
              <input type="hidden" name="cmd" value="_s-xclick"/>
              <input type="hidden" name="encrypted" value="-----BEGIN PKCS7----------END PKCS7-----"/>
              <input type="image" src="https://www.paypalobjects.com/en_US/i/btn/btn_donateCC_LG.gif" border="0" name="submit" alt="PayPal - The safer, easier way to pay online!"/>
              <img alt="" border="0" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" width="1" height="1"/>
            </form>
          </g:HTMLPanel>
        </m:MaterialColumn>

        <m:MaterialColumn grid="s12 m4 l4">
          <m:MaterialTitle textColor="WHITE" title="Join The Discussion"
                           description="We provide Gitter Chat rooms in order for GWT Developers discussed and collaborate about GWT Material Design and Phonegap Integration."/>
          <m:MaterialAnchorButton href="https://gitter.im/GwtMaterialDesign/gwt-material" target="_blank" text="CHAT" waves="LIGHT" textColor="WHITE"/>
        </m:MaterialColumn>
        <m:MaterialColumn grid="s12 m4 l4">
          <m:MaterialTitle textColor="WHITE" title="Github"
                           description="Download, fork, pull, file issues, and more at the official GWT Material repo on Github."/>
          <m:MaterialAnchorButton href="https://github.com/GwtMaterialDesign/gwt-material/" target="_blank" text="Github" waves="LIGHT" textColor="WHITE"/>
          <m:MaterialTooltip text="Visit our Community" position="RIGHT">
            <m:MaterialImage ui:field="imgGPlus" resource="{res.gplus}" addStyleNames="{style.gplus}"/>
          </m:MaterialTooltip>
        </m:MaterialColumn>
      </m:MaterialRow>

      <m:MaterialFooterCopyright ui:field="footerCopyRight" addStyleNames="footer-copyright">
        <m:MaterialLabel ui:field="footerCopyRightLabel" />
      </m:MaterialFooterCopyright>
    </m:MaterialFooter>
  </g:HTMLPanel>
</ui:UiBinder>
