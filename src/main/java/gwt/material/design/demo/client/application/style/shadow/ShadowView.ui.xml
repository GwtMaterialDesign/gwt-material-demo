<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
             xmlns:demo="urn:import:gwt.material.design.demo.client.ui">

  <ui:with field='res' type='gwt.material.design.demo.client.resources.MaterialResources' />

  <ui:style>
    .panel{
      height: 200px;
      margin: 2%;
    }
  </ui:style>

  <m:MaterialPanel>
    <g:HTMLPanel>
      <m:MaterialRow addStyleNames="code">
        <m:MaterialTitle title="Panels" description="By adding shadow='1' to any material panel, material row, material column, material card, you can easily apply a shadow to that element"/>
        <m:MaterialRow>
          <m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="1" waves="DEFAULT" addStyleNames="{style.panel}"/>
          <m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="2" waves="RED" addStyleNames="{style.panel}"/>
          <m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="3" waves="TEAL" addStyleNames="{style.panel}"/>
          <m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="4" waves="YELLOW" addStyleNames="{style.panel}"/>
          <m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="5" waves="PURPLE" addStyleNames="{style.panel}"/>
        </m:MaterialRow>
  
        <demo:PrettyPre addStyleNames="lang-xml">
          &lt;m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="1" waves="DEFAULT"/>
          &lt;m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="2" waves="RED"/>
          &lt;m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="3" waves="TEAL"/>
          &lt;m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="4" waves="YELLOW"/>
          &lt;m:MaterialColumn backgroundColor="WHITE" grid="s12 m12 l2" shadow="5" waves="PURPLE"/>
        </demo:PrettyPre>
      </m:MaterialRow>
  
      <g:HTMLPanel addStyleNames="code">
        <m:MaterialTitle title="Any Material Elements" description="You can directly add shadows on any material widgets by adding: addStyleNames='z-depth-1' to the ui binder widget. "/>
        <ma:webp.MaterialWebpImage url="https://gwtmaterialdesign.github.io/gwt-material-demo/images/image.webp" fallbackExtension="png" addStyleNames="z-depth-1"/>
  
        <demo:PrettyPre addStyleNames="lang-xml">
          &lt;m:MaterialImage resource="{res.image}" addStyleNames="z-depth-1"/>
        </demo:PrettyPre>
      </g:HTMLPanel>
    </g:HTMLPanel>
  </m:MaterialPanel>
</ui:UiBinder>
